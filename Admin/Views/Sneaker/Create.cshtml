@model Models.Sneaker.AdminSneakerAddVM
@{
    Layout = "";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Shoes : Add Sneaker</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="~/addpagedesign/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="~/addpagedesign/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/addpagedesign/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/HomeDesign/logo.png" type="image/gif" />
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/addpagedesign/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <!-- owl stylesheets -->
    <link rel="stylesheet" href="~/addpagedesign/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/addpagedesign/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<!-- body -->
<body class="main-layout">

    <!-- contact section start -->
    <div class="collection_text">ADD SNEAKERS</div>
    <div class="layout_padding contact_section">
        <div class="container">
            <h1 class="new_text"><strong>Add New Sneaker</strong></h1>
        </div>
        <div class="container-fluid ram">
            <div class="row">
                <div class="col-md-6">
                    <div class="email_box">
                        <div class="input_main">
                            <div class="container">
                                <form asp-controller="Sneaker" asp-action="Create" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label class="form-label" placeholder="Name"> Name : </label>
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.AntiForgeryToken()
                                        <div class="mb-3">
                                            <label class="form-label" placeholder="Name"> Brand: </label>
                                            @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
                                            <span asp-validation-for="Brand" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label"> Price :  </label>
                                        <input type="text" asp-for="@Model.Price" class="form-control" aria-label="Dollar amount (with dot and two decimal places)">
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        
                                        <label class="form-label"> Description :  </label>
                                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        
                                        <select asp-for="@Model.EstDisp" class="form-control">
                                            <option value="true">Sneaker Available</option>
                                            <option value="false">Sneaker Not Available</option>
                                        </select>
                                    </div>
                                    <div class="send_btn">
                                        <button class="main_bt" type="submit">Add</button>
                                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                    </div>
                                </form>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="shop_banner">
                        <div class="our_shop">
                            <button class="out_shop_bt">Pullo Store</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact section end -->
    <!-- section footer start -->
    <!-- section footer end -->
    <div class="copyright">2024 All Rights Reserved. <a href="https://html.design">Free html  Templates</a></div>


    <!-- Javascript files-->
    <script src="~/addpagedesign/js/jquery.min.js"></script>
    <script src="~/addpagedesign/js/popper.min.js"></script>
    <script src="~/addpagedesign/js/bootstrap.bundle.min.js"></script>
    <script src="~/addpagedesign/js/jquery-3.0.0.min.js"></script>
    <script src="~/addpagedesign/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="~/addpagedesign/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/addpagedesign/js/custom.js"></script>
    <!-- javascript -->
    <script src="~/addpagedesign/js/owl.carousel.js"></script>
    <script src="~/addpagedesign/https:cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".fancybox").fancybox({
                openEffect: "none",
                closeEffect: "none"
            });


            $('#myCarousel').carousel({
                interval: false
            });

            //scroll slides on swipe for touch enabled devices

            $("#myCarousel").on("touchstart", function (event) {

                var yClick = event.originalEvent.touches[0].pageY;
                $(this).one("touchmove", function (event) {

                    var yMove = event.originalEvent.touches[0].pageY;
                    if (Math.floor(yClick - yMove) > 1) {
                        $(".carousel").carousel('next');
                    }
                    else if (Math.floor(yClick - yMove) < -1) {
                        $(".carousel").carousel('prev');
                    }
                });
                $(".carousel").on("touchend", function () {
                    $(this).off("touchmove");
                });
            });
    </script>
</body>
</html>
